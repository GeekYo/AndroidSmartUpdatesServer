<div class="navbar navbar-fixed-top ">
  <div class="navbar-inner">
    <div class="container-fluid">
      <a class="btn btn-navbar" data-target="nav-collapse" data-toggle="collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </a>
      <a class="brand" href><%= t('navigation.title') %></a>
      <div class="nav-collapse">
        <ul class="nav">
          <li>
            <%= link_to t('navigation.home'), root_url %>
          </li>
          <li>
            <%= link_to t('navigation.application'), applications_path %>
          </li>
          <% if user_signed_in? and current_user.has_role? :admin %>
            <li>
            <%= link_to t('navigation.admin'), users_path %>
            </li>
          <% end %>
        </ul>

        <ul class="nav pull-right">
          <% if user_signed_in? %>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= current_user.email %><b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li>
                  <%= link_to t("navigation.edit_account"), edit_user_registration_path %>
                </li>
                <li>
                <%= link_to t("navigation.logout"), destroy_user_session_path, :method=>'delete' %>
                </li>
              </ul>
            </li>
          <% else %>
            <li>
            <%= link_to t("navigation.login"), new_user_session_path %>
            </li>
            <li>
            <%= link_to t("navigation.sign_up"), new_user_registration_path %>
            </li>
          <% end %>
        </ul>

      </div>
    </div>
  </div>
</div>
